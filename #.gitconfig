# ファイル名を".gitconfig"にして/Users/ユーザ名/直下に配置するとエイリアスが使えるようになる

[user]
	name = 自分の名前
	email = 自分のメアド

[color]
	ui = true

[alias]
	st = status
	br = branch
	co = checkout
	cm = commit
	upd = remote update -p
	graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Crest%s'
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'